<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Foto</th>
      <th>Birthdate</th>
      <th>Gender</th>
      <th>Country</th>
      <th>Type</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= image_tag(actor.avatar_url(:thumb)) if actor.avatar? %></td>
        <td><%= actor.birthdate %></td>
        <td><%= actor.gender %></td>
        <td><%= actor.country %></td>
        <td><%= actor.type %></td>
        <td><%= link_to 'Show', actor %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
          <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Actor', new_actor_path %>
<% end %>  
